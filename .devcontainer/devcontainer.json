// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
  // General devcontainer.json properties
  "name": "libxslt",
  "containerUser": "emscripten",
  "build": { "context": "..", "dockerfile": "./Dockerfile" },
  "features": { "ghcr.io/devcontainers/features/node:1": {} },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "ms-vscode.cpptools",
        "orta.vscode-jest"
      ]
    }
  },

  //  Lifecycle scripts
  "postCreateCommand": ". ${NVM_DIR}/nvm.sh && nvm install && corepack install && corepack enable && pnpm config set storeDir $HOME/.local/share/pnpm/store && pnpm install --force && pnpm build:libxslt && pnpm compile"
}
