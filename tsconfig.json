{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "ES2024",
    "moduleDetection": "force",

    /* Modules */
    "module": "Preserve",
    "rootDir": "./src",

    /* Emit */
    "declaration": true,
    "outDir": "dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,
    "rewriteRelativeImportExtensions": true
  }
}
